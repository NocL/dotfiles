[bar/primary]
width = 100%
height = 28
offset-x = 0
offset-y = 0
radius-top = 0
radius-bottom = 0

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Source Code Pro:pixelsize=15;3
font-1 = Font Awesome 5 Free:style=Regular:pixelsize=14;3
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=14;3
font-3 = IPAGothic:pixelsize=15;3

modules-left = bspwm
modules-center = date
modules-right = mpd wlan2 wlan1 wlan0 memory temperature xbacklight volume battery

wm-restack = bspwm

[module/bspwm]
