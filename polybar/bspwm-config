[module/battery]
type = internal/battery
poll-interval = 30
battery = BAT0
adapter = AC0
full-at = 96

format-full = <label-full>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.green}
label-full = %percentage%

format-charging = <label-charging>
format-charging-prefix = " "
format-charging-prefix-foreground = ${colors.yellow}
label-charging = %percentage%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %time%

ramp-capacity-0 = 
ramp-capacity-0-background = ${colors.red}
ramp-capacity-0-foreground = ${colors.white}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.red}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.yellow}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.green}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colors.green}

[module/temperature]
interval = 2
type = internal/temperature
thermal-zone = 3
warn-temperature = 75

format = <ramp> <label>
label = %temperature%
label-foreground = ${colors.foreground}

format-warn = <ramp> <label-warn>
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-0-foreground = ${colors.green}
ramp-1 = 
ramp-1-foreground = ${colors.green}
ramp-2 = 
ramp-2-foreground = ${colors.green}
ramp-3 = 
ramp-3-foreground = ${colors.yellow}
ramp-4 = 
ramp-4-foreground = ${colors.red}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 1
format-online = <label-song>
format-offline = "MPD offline"
format-offline-prefix = " "
format-offline-prefix-foreground = ${colors.red}

format-paused-prefix = " "
format-paused-prefix-foreground = ${colors.yellow}
format-playing-prefix = " "
format-playing-prefix-foreground = ${colors.green}
format-stopped = "MPD stopped"
format-stopped-prefix = " "
format-stopped-prefix-foreground = ${colors.red}

